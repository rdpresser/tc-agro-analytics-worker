{
  "Database": {
    "Postgres": {
      "Host": "localhost",
      "Port": 5432,
      "Database": "tc-agro-analytics-db",
      "MaintenanceDatabase": "postgres",
      "UserName": "postgres",
      "Password": "postgres",
      "Schema": "public",
      "ConnectionTimeout": 30,
      "MinPoolSize": 2,
      "MaxPoolSize": 20,
      "SslMode": "Prefer",
      "TrustServerCertificate": true
    }
  },
  "Cache": {
    "Redis": {
      "Host": "localhost",
      "Port": 6379,
      "Password": ""
    }
  },
  "Messaging": {
    "RabbitMQ": {
      "Host": "localhost",
      "Port": 5672,
      "ManagementPort": 15672,
      "VirtualHost": "/",
      "UserName": "guest",
      "Password": "guest",
      "Exchange": "analytics.events",
      "AutoProvision": true,
      "AutoPurgeOnStartup": false,
      "Durable": true,
      "UseQuorumQueues": false
    }
  },
  "Cors": {
    "AllowAnyOrigin": true
  },
  "Alerts": {
    "Thresholds": {
      "MaxTemperature": 30.0,
      "MinSoilMoisture": 25.0,
      "MinBatteryLevel": 20.0
    }
  },
  "Services": {
    "Identity": {
      "HttpPort": 5001
    },
    "Farm": {
      "HttpPort": 5002
    },
    "SensorIngest": {
      "HttpPort": 5003
    },
    "AnalyticsWorker": {
      "HttpPort": 5004
    },
    "Dashboard": {
      "HttpPort": 5005
    }
  },
  "Auth": {
    "Jwt": {
      "Issuer": "http://localhost:5001",
      "Audience": "http://localhost:5000",
      "SecretKey": "your-256-bit-secret-key-change-in-production-12345678",
      "ExpirationMinutes": 480
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "Npgsql": "Information"
    }
  }
}
