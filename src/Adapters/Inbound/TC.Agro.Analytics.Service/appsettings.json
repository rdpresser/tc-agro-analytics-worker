{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Alerts": {
    "Thresholds": {
      "MaxTemperature": 35.0,
      "MinSoilMoisture": 20.0,
      "MinBatteryLevel": 15.0
    }
  },
  "Auth": {
    "Jwt": {
      "SecretKey": "analytics-worker-does-not-need-jwt-but-sharedkernel-validates-it-12345678901234567890",
      "Issuer": "http://localhost:5003",
      "Audience": ["analytics-worker"],
      "ExpirationInMinutes": 60
    }
  },
  "Database": {
    "Postgres": {
      "Host": "localhost",
      "Port": 5432,
      "Database": "tc_agro_analytics",
      "UserName": "postgres",
      "Password": "postgres",
      "Schema": "public"
    }
  },
  "Messaging": {
    "RabbitMQ": {
      "Host": "localhost",
      "Port": 5672,
      "UserName": "guest",
      "Password": "guest",
      "AutoProvision": true,
      "AutoPurgeOnStartup": false
    }
  }
}
